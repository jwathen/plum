@model Plum.ViewModels.Account.SignInViewModel
@{
    ViewBag.Title = "Sign In";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Sign In</h2>
            @Html.FlashMessage()
            <form id="signInForm" action="@Url.Action(MVC.Account.SignIn())" method="post">
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(x => x.EmailAddress, "Email Address")
                    @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", type = "email" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.CheckBoxFor(x => x.RememberMe)
                    @Html.LabelFor(x => x.RememberMe, "Remember Me")
                </div>
                <input type="submit" value="Submit" class="btn btn-primary" />
                @Html.AntiForgeryToken2()
            </form>
            <p>
                <br />
                Don't have an account? @Html.ActionLink("Sign Up", MVC.Account.SignUp())
            </p>
        </div>
    </div>
</div>
@section scripts {
    <script src="@Html.FileVersionUrl(Links.Content.Scripts.Account.SignIn_es5_min_js)"></script>
}