@model Plum.ViewModels.Business.BusinessViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <p>
                <strong>
                    <a href="@Url.Action(MVC.Business.Show(Model.Id))" data-loading-overlay="true">
                        <i class="fa fa-chevron-left"></i>
                        Back to Settings
                    </a>
                </strong>
            </p>
            <h3>Edit Business Information</h3>
            <form action="@Url.Action(MVC.Business.Update())" method="post" data-loading-overlay="true">
                @Html.ValidationSummary()
                <div class="form-group">
                    <label for="@Html.IdFor(x => x.Name)">
                        Business Name
                        <span class="text-danger">*</span>
                    </label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.PhoneNumber, "Phone Number")
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", type = "tel", data_formatter = "phone" })
                </div>
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                @Html.HttpMethodOverride(HttpVerbs.Put)
                @Html.AntiForgeryToken2()
            </form>
        </div>
    </div>
</div>

