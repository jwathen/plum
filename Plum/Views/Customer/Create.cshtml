@model Plum.ViewModels.Customer.CustomerViewModel
@{
    Layout = null;
}

@using (Ajax.BeginForm(MVC.Customer.Create(), new AjaxOptions { OnBegin = "setLoading", OnComplete = "clearLoading", UpdateTargetId = "CreateCustomerModal" }))
{
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        Add Party to Wait List
                    </h4>
                </div>
                <fieldset>
                    <div class="modal-body">
                        @Html.ValidationSummary()
                        @Html.EditorForModel()
                    </div>
                </fieldset>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-block btn-primary" value="Add Party" />
                </div>
                @Html.HiddenFor(x => x.QueueId)
                @Html.AntiForgeryToken2()
            </div>
        </div>
    </div>
}
<script>
    if (typeof clearLoading == 'function') {
        clearLoading();
    }
</script>
