@model Plum.ViewModels.Customer.CustomerViewModel
@{
    Layout = null;
}

<div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title">
                    Edit Party
                </h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm(MVC.Customer.Update(), new AjaxOptions { OnBegin = "setLoading", OnComplete = "clearLoading", UpdateTargetId = "ShowCustomerModal" }))
                {
                    @Html.EditorForModel()
                    <a href="#" class="btn btn-default pull-left"
                       data-loading-overlay="true"
                       data-ajax-load="true"
                       data-ajax-load-target="#ShowCustomerModal"
                       data-ajax-load-url="@Url.Action(MVC.Customer.Show(Model.Id))">
                        Cancel
                    </a>
                    <input type="submit" value="Save Changes" class="btn btn-primary pull-right" />
                    <div class="clearfix"></div>
                    @Html.HttpMethodOverride(HttpVerbs.Put)
                    @Html.AntiForgeryToken2()
                }
            </div>
        </div>
    </div>
</div>
<script>initAjaxLoadLinks('#ShowCustomerModal');</script>
<script>initFormatters('#ShowCustomerModal');</script>