@{
    Layout = null;
}

<div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title">
                    Send Text Message
                </h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm(MVC.Customer.SendCustomMessage(), new AjaxOptions { OnBegin = "setLoading", OnComplete = "clearLoading", UpdateTargetId = "ShowCustomerModal" }))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <p>Send a text message to the customer.</p>
                            <div class="form-group">
                                <label for="Message">
                                    Message
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextArea(MVC.Customer.SendCustomMessageParams.message, new { @class = "form-control", rows = "3" })
                            </div>
                        </div>
                    </div>
                    <a href="#" class="btn btn-default pull-left"
                       data-loading-overlay="true"
                       data-ajax-load="true"
                       data-ajax-load-target="#ShowCustomerModal"
                       data-ajax-load-url="@Url.Action(MVC.Customer.Show())">
                       Cancel
                    </a>
                    <input type="submit" value="Send" class="btn btn-primary pull-right" />
                    <div class="clearfix"></div>
                    @Html.AntiForgeryToken2()
                }
            </div>
        </div>
    </div>
</div>
<script>initAjaxLoadLinks('#ShowCustomerModal');</script>
