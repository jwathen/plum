@model Plum.ViewModels.Shared.FlashMessage

@if (!string.IsNullOrWhiteSpace(Model?.Text) && !string.IsNullOrWhiteSpace(Model?.MinorText))
{
    <div class="alert alert-dismissible alert-@Model.Type.ToString().ToLower()">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @if (!string.IsNullOrWhiteSpace(Model.Text))
        {
            <strong>@Model.Text</strong>
        }
        @if (!string.IsNullOrWhiteSpace(Model.MinorText))
        {
            <text>@Model.MinorText</text>
        }
    </div>
